        <h1 class="titleAbout">
            Nossos cursos
        </h1>

        <section class="cursos" id="cursos">
            <button id="prev-button">
              <i class="fa-solid fa-arrow-left"></i>
            </button>
          
            {{#each inicialDados.slides}}
            <div class="{{this.actives}}">
              <div class="card">
                <div class="card-left">
                  <div class="icon-circle">
                    <img src="imgs/landingPage/{{this.imglogo}}" alt="Ícone de segurança">
                  </div>
                  <div class="background-key"></div>
                </div>
                <div class="card-right">
                  <h2>{{this.name}}</h2>
                  <p>{{this.texto}}</p>
                  <div class="icons">
                    <i class="fas fa-trophy"></i>
                    <i class="fas fa-globe"></i>
